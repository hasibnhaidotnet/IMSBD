@model Inventorymanagementsystem.ViewModel.ProductStockFilterViewModel

@{
    ViewData["Title"] = "Stock Report";
}

<h2 class="text-2xl font-semibold mb-6 text-gray-900">Stock Report</h2>

<form method="get" asp-controller="Stock" asp-action="Index" class="grid grid-cols-1 md:grid-cols-6 gap-4 mb-8">

    <div>
        <label asp-for="CategoryId" class="block mb-1 font-medium text-gray-700">Category</label>
        <select asp-for="CategoryId" class="w-full rounded border border-gray-300 px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" asp-items="Model.Categories">
            <option value="">-- All Categories --</option>
        </select>
    </div>

    <div>
        <label asp-for="SubCategoryId" class="block mb-1 font-medium text-gray-700">SubCategory</label>
        <select asp-for="SubCategoryId" class="w-full rounded border border-gray-300 px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" asp-items="Model.SubCategories">
            <option value="">-- All SubCategories --</option>
        </select>
    </div>

    <div class="flex items-center space-x-2 mt-6 md:mt-8">
        <input asp-for="ShowLowStockOnly" type="checkbox" class="h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
        <label asp-for="ShowLowStockOnly" class="text-gray-700 font-medium cursor-pointer select-none">Low Stock Only</label>
    </div>

    <div class="md:col-span-2 flex items-end">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded shadow">
            Filter
        </button>
    </div>
</form>

<div class="overflow-x-auto rounded shadow border border-gray-300">
    <table class="min-w-full table-auto border-collapse">
        <thead class="bg-gray-800 text-white">
            <tr>
                <th class="px-4 py-3 text-left">Product</th>
                <th class="px-4 py-3 text-left">Unit</th>
                <th class="px-4 py-3 text-left">Category</th>
                <th class="px-4 py-3 text-left">SubCategory</th>
                <th class="px-4 py-3 text-right">Purchased</th>
                <th class="px-4 py-3 text-right">Purchase Return</th>
                <th class="px-4 py-3 text-right">Sold</th>
                <th class="px-4 py-3 text-right">Sales Return</th>
                <th class="px-4 py-3 text-right">Damaged</th>
                <th class="px-4 py-3 text-right">Current Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductStocks)
            {
                <tr class="@(item.CurrentStock < 10 ? "bg-red-100 font-semibold" : "")">
                    <td class="px-4 py-2">@item.ProductName</td>
                    <td class="px-4 py-2">@item.UnitName</td>
                    <td class="px-4 py-2">@item.CategoryName</td>
                    <td class="px-4 py-2">@item.SubCategoryName</td>
                    <td class="px-4 py-2 text-right">@item.TotalPurchased</td>
                    <td class="px-4 py-2 text-right">@item.TotalPurchaseReturn</td>
                    <td class="px-4 py-2 text-right">@item.TotalSold</td>
                    <td class="px-4 py-2 text-right">@item.TotalSalesReturn</td>
                    <td class="px-4 py-2 text-right">@item.TotalDamaged</td>
                    <td class="px-4 py-2 text-right font-bold">@item.CurrentStock</td>
                </tr>
            }
        </tbody>
    </table>
</div>
