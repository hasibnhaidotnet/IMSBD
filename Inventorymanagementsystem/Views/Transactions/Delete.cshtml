@model Inventorymanagementsystem.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-gray-800 rounded-xl shadow-md p-6">
        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-white">🗑️ Delete Transaction</h2>
            <a asp-action="Index"
               class="px-4 py-2 bg-gray-600 text-white text-sm rounded-lg hover:bg-gray-700 transition">
                ← Back to List
            </a>
        </div>

        <!-- Warning -->
        <div class="mb-6">
            <p class="text-red-400 font-semibold text-lg">
                Are you sure you want to delete this transaction?
            </p>
        </div>

        <!-- Transaction Info -->
        <div class="bg-gray-900 rounded-lg p-5 border border-gray-700">
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4 text-gray-200">
                <div>
                    <dt class="font-semibold text-gray-400">Client</dt>
                    <dd class="mt-1">@Model.ClientName</dd>
                </div>

                <div>
                    <dt class="font-semibold text-gray-400">Transaction Type</dt>
                    <dd class="mt-1">@Model.TransactionType</dd>
                </div>

                <div>
                    <dt class="font-semibold text-gray-400">Amount</dt>
                    <dd class="mt-1">@Model.Amount.ToString("N2")</dd>
                </div>

                <div>
                    <dt class="font-semibold text-gray-400">Date</dt>
                    <dd class="mt-1">@Model.TransactionDate.ToShortDateString()</dd>
                </div>
            </dl>
        </div>

        <!-- Buttons -->
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-6 flex items-center space-x-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit"
                    class="px-6 py-2 bg-red-600 text-white text-sm font-semibold rounded-lg shadow hover:bg-red-700 transition">
                🗑️ Delete
            </button>
            <a asp-action="Index"
               class="px-6 py-2 bg-gray-500 text-white text-sm font-semibold rounded-lg shadow hover:bg-gray-600 transition">
                Cancel
            </a>
        </form>
    </div>
</div>
