@model Inventorymanagementsystem.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Edit Transaction";
}

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-gray-800 rounded-xl shadow-md p-6">
        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-white">✏️ Edit Transaction</h2>
            <a asp-action="Index"
               class="px-4 py-2 bg-gray-600 text-white text-sm rounded-lg hover:bg-gray-700 transition">
                ← Back to List
            </a>
        </div>

        <!-- Form -->
        <form asp-action="Edit" method="post" class="space-y-5">
            <input type="hidden" asp-for="Id" />

            <!-- Client -->
            <div>
                <label asp-for="ClientId" class="block text-gray-200 font-medium mb-1"></label>
                <select asp-for="ClientId" asp-items="Model.Clients"
                        class="w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:border-blue-500 focus:ring-2 focus:ring-blue-500"
                        required>
                    <option value="">-- Select Client --</option>
                </select>
                <span asp-validation-for="ClientId" class="text-red-400 text-sm"></span>
            </div>

            <!-- Transaction Type -->
            <div>
                <label asp-for="TransactionType" class="block text-gray-200 font-medium mb-1"></label>
                <select asp-for="TransactionType"
                        class="w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:border-blue-500 focus:ring-2 focus:ring-blue-500">
                    <option value="0">Receive</option>
                    <option value="1">Payment</option>
                </select>
                <span asp-validation-for="TransactionType" class="text-red-400 text-sm"></span>
            </div>

            <!-- Amount -->
            <div>
                <label asp-for="Amount" class="block text-gray-200 font-medium mb-1"></label>
                <input asp-for="Amount" type="number" step="0.01"
                       class="w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:border-blue-500 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Amount" class="text-red-400 text-sm"></span>
            </div>

            <!-- Date -->
            <div>
                <label asp-for="TransactionDate" class="block text-gray-200 font-medium mb-1"></label>
                <input asp-for="TransactionDate" type="date"
                       class="w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:border-blue-500 focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="TransactionDate" class="text-red-400 text-sm"></span>
            </div>

            <!-- Note -->
            <div>
                <label asp-for="Note" class="block text-gray-200 font-medium mb-1"></label>
                <textarea asp-for="Note" rows="3"
                          class="w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:border-blue-500 focus:ring-2 focus:ring-blue-500"></textarea>
            </div>

            <!-- Buttons -->
            <div class="flex items-center space-x-3">
                <button type="submit"
                        class="px-6 py-2 bg-yellow-500 text-gray-900 text-sm font-semibold rounded-lg shadow hover:bg-yellow-600 transition">
                    💾 Update
                </button>
                <a asp-action="Index"
                   class="px-6 py-2 bg-gray-500 text-white text-sm font-semibold rounded-lg shadow hover:bg-gray-600 transition">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
