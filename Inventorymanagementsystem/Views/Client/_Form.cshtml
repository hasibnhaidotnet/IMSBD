@model Inventorymanagementsystem.ViewModels.ClientViewModel

<div class="space-y-4">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClientType"></label>
        <select asp-for="ClientType" asp-items="Html.GetEnumSelectList<ClientType>()" class="form-control"></select>
        <span asp-validation-for="ClientType" class="text-red-500 text-sm"></span>
    </div>
</div>
