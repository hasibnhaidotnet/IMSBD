@model Inventorymanagementsystem.ViewModels.ClientViewModel

@{
    ViewData["Title"] = "Delete Client";
}

<div class="max-w-4xl mx-auto p-6 bg-gray-800 rounded-lg shadow-lg text-white">
    <h2 class="text-2xl font-semibold mb-4 text-red-400">⚠️ Confirm Delete</h2>

    <p class="mb-6 text-yellow-300 bg-yellow-800 bg-opacity-30 p-4 rounded">
        Are you sure you want to delete the following client? This action cannot be undone.
    </p>

    <div class="bg-gray-900 p-4 rounded-lg shadow-inner">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
                <label class="block text-sm font-medium text-gray-400">Name</label>
                <div class="mt-1 text-white">@Model.Name</div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-400">Client Type</label>
                <div class="mt-1 text-white">@Model.ClientType</div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Address))
            {
                <div>
                    <label class="block text-sm font-medium text-gray-400">Address</label>
                    <div class="mt-1 text-white">@Model.Address</div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Phone))
            {
                <div>
                    <label class="block text-sm font-medium text-gray-400">Phone</label>
                    <div class="mt-1 text-white">@Model.Phone</div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Email))
            {
                <div>
                    <label class="block text-sm font-medium text-gray-400">Email</label>
                    <div class="mt-1 text-white">@Model.Email</div>
                </div>
            }
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-6">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="flex justify-between">
            <a asp-action="Index"
               class="px-4 py-2 bg-gray-600 hover:bg-gray-700 rounded text-white transition">
                🔙 Cancel
            </a>
            <button type="submit"
                    class="px-4 py-2 bg-red-600 hover:bg-red-700 rounded text-white transition">
                🗑️ Confirm Delete
            </button>
        </div>
    </form>
</div>
