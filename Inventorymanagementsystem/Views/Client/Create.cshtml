@model Inventorymanagementsystem.ViewModels.ClientViewModel
@{
    ViewData["Title"] = "Create Client";
}

<h2 class="text-xl font-semibold mb-4">Create Client</h2>

<form asp-action="Create" method="post" class="bg-gray-800 p-6 rounded shadow-md space-y-4">
    <partial name="_Form" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
