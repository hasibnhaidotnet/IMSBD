@model Inventorymanagementsystem.Models.Quotation

@{
    Layout = null;
    var items = Model.Items.ToList();
    int serial = 1;
    decimal total = 0;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Quotation - @Model.Id</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12pt;
            color: #000;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 800px;
            margin: auto;
            padding: 40px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .info {
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        th, td {
            border: 1px solid #333;
            padding: 8px 12px;
            text-align: left;
        }

        th {
            background-color: #f0f0f0;
        }

        .total-row td {
            font-weight: bold;
            border-top: 2px solid #000;
        }

        .footer {
            text-align: right;
            font-style: italic;
        }
    </style>

    <style>
        @Html.Raw("@media print { .no-print { display: none; } }")
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Area 51 </h1>
        </div>

        <div class="info">
            <p><strong>Client Name:</strong> @Model.Client.Name</p>
            <p><strong>Address:</strong> @Model.Client.Address</p>
            <p><strong>Contact:</strong> @Model.Client.Phone</p>
            <p><strong>Date:</strong> @Model.QuotationDate.ToString("dd MMM yyyy")</p>
        </div>

        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Product</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in items)
                {
                    var lineTotal = item.Quantity * item.Price;
                        total += (decimal)lineTotal;
                    <tr>
                        <td>@serial</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Price.ToString("0.00")</td>
                        <td>@item.Quantity</td>
                        <td>@lineTotal.ToString("0.00")</td>
                    </tr>
                    serial++;
                }
                <tr class="total-row">
                    <td colspan="4" style="text-align:right;">Total</td>
                    <td>@total.ToString("0.00")</td>
                </tr>
            </tbody>
        </table>

        <div class="footer">
            <p>Thank you for your business!</p>
        </div>
    </div>
</body>
</html>
