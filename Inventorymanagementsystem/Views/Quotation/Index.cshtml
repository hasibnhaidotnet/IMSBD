@model IEnumerable<Inventorymanagementsystem.Models.Quotation>
@{
    ViewData["Title"] = "Quotation List";
}

<div class="max-w-7xl mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-white">📄 Quotation List</h2>
        <a asp-action="Create" class="px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition-all duration-200">
            + New Quotation
        </a>
    </div>

    <div class="overflow-x-auto bg-gray-900 rounded-xl shadow-inner">
        <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-700 text-gray-300">
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-medium">Quotation No</th>
                    <th class="px-6 py-3 text-left text-sm font-medium">Date</th>
                    <th class="px-6 py-3 text-left text-sm font-medium">Client</th>
                    <th class="px-6 py-3 text-right text-sm font-medium">Total (৳)</th>
                    <th class="px-6 py-3 text-center text-sm font-medium">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700 text-gray-200 text-sm">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-700 transition">
                        <td class="px-6 py-4 font-semibold">@item.QuotationNo</td>
                        <td class="px-6 py-4">@item.QuotationDate.ToString("yyyy-MM-dd")</td>
                        <td class="px-6 py-4">@item.Client?.Name</td>
                        <td class="px-6 py-4 text-right font-semibold text-green-400">@item.TotalAmount.ToString("N2")</td>
                        <td class="px-6 py-4 text-center space-x-2">
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="inline-block px-3 py-1 bg-indigo-600 rounded hover:bg-indigo-700 text-xs text-white">
                                Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="inline-block px-3 py-1 bg-yellow-500 rounded hover:bg-yellow-600 text-xs text-gray-900">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="inline-block px-3 py-1 bg-red-600 rounded hover:bg-red-700 text-xs text-white">
                                Delete
                            </a>
                            <a asp-action="Print" asp-route-id="@item.Id" target="_blank"
                               class="inline-block px-3 py-1 bg-gray-600 rounded hover:bg-gray-700 text-xs text-white">
                                Print
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
