@model Inventorymanagementsystem.ViewModels.QuotationViewModel

@{
    ViewData["Title"] = "Delete Quotation";
}

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Delete Quotation</h4>
        </div>
        <div class="card-body">
            <p class="alert alert-warning">
                Are you sure you want to delete this quotation?
            </p>

            <dl class="row">
                <dt class="col-sm-3">Client</dt>
                <dd class="col-sm-9">@Model.ClientName</dd>

                <dt class="col-sm-3">Quotation Date</dt>
                <dd class="col-sm-9">@Model.QuotationDate.ToString("dd MMM yyyy")</dd>
            </dl>

            @if (Model.Items != null && Model.Items.Any())
            {
                <h5 class="mt-4">Quotation Items</h5>
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Product</th>
                            <th class="text-center ">Quantity</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.SellingPrice.ToString("0.00")</td>
                                <td class="text-end">@((item.Quantity * (double)item.SellingPrice).ToString("0.00"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Total Amount</th>
                            <th class="text-end">
                                @Model.Items.Sum(i => i.Quantity * (double)i.SellingPrice).ToString("0.00")
                            </th>
                        </tr>
                    </tfoot>
                </table>
            }
            else
            {
                <p class="text-muted">No items found for this quotation.</p>
            }

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
