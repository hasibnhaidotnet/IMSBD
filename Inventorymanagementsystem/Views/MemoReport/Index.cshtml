@model Inventorymanagementsystem.ViewModels.MemoReportViewModel
@{
    ViewData["Title"] = "Memo Report";
}

@* Print-safe media queries *@
<style>
    @Html.Raw("@media print { .no-print { display: none !important; } body { font-size: 12px; } table { font-size: 12px; } .page-break { page-break-after: always; } @page { size: A4; margin: 12mm; } }")
    @Html.Raw("@media (max-width: 768px) { .report-container { padding: 0 12px; } .summary-box { width: 100%; margin: 12px 0 0 0; } }")
</style>

<div class="max-w-7xl mx-auto p-6 bg-gray-800 rounded-lg shadow-lg report-container">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-3xl font-bold text-white">Memo Report</h2>
            <div class="text-sm text-gray-300 mt-1">Generated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")</div>
        </div>

        <div class="no-print flex items-center gap-3">
            <form method="get" class="flex items-end gap-3">
                <div>
                    <label class="text-sm text-gray-300 block">From</label>
                    <input asp-for="FromDate" type="date" class="bg-gray-900 text-gray-200 px-3 py-2 rounded border border-gray-700" />
                </div>
                <div>
                    <label class="text-sm text-gray-300 block">To</label>
                    <input asp-for="ToDate" type="date" class="bg-gray-900 text-gray-200 px-3 py-2 rounded border border-gray-700" />
                </div>
                <div class="pt-6">
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded shadow">Filter</button>
                    <a asp-action="Index" class="ml-2 bg-gray-600 hover:bg-gray-700 text-white px-3 py-2 rounded shadow">Reset</a>

                </div>
            </form>
        </div>
    </div>

    <div class="overflow-x-auto rounded bg-gray-900 shadow-inner">
        @foreach (var memo in Model.Memos)
        {
            <div class="border-b border-gray-700 px-4 py-4">
                <div class="flex justify-between items-center mb-3">
                    <div>
                        <div class="text-sm text-gray-300">@memo.MemoType <span class="text-gray-400">|</span> Memo - <span class="text-white font-semibold">@memo.MemoNo</span></div>
                        <div class="text-xs text-gray-400 mt-1">
                            <strong class="text-gray-200">@((memo.MemoType == "Purchase") ? "Supplier" : "Buyer")</strong>: @memo.ClientName
                        </div>
                    </div>
                    <div class="text-sm text-gray-400">Date: <span class="text-gray-200">@memo.Date.ToString("dd MMM yyyy")</span></div>
                </div>

                <table class="min-w-full divide-y divide-gray-700 text-gray-200">
                    <thead class="bg-gray-800 text-left text-sm font-semibold">
                        <tr>
                            <th class="px-4 py-3">Product</th>
                            <th class="px-4 py-3 text-right">Qty</th>
                            <th class="px-4 py-3">Unit</th>
                            <th class="px-4 py-3 text-right">Unit Price</th>
                            <th class="px-4 py-3 text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                        @foreach (var item in memo.Items)
                        {
                            <tr class="hover:bg-gray-800 transition">
                                <td class="px-4 py-2">@item.ProductName</td>
                                <td class="px-4 py-2 text-right">@string.Format("{0:N0}", item.Quantity)</td>
                                <td class="px-4 py-2">@item.UnitName</td>
                                <td class="px-4 py-2 text-right">@item.UnitPrice.ToString("0.00")</td>
                                <td class="px-4 py-2 text-right">@item.Total.ToString("0.00")</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="mt-3 text-right">
                    <span class="text-gray-300 font-semibold">Subtotal: </span>
                    <span class="text-white font-bold">@memo.Subtotal.ToString("0.00")</span>
                </div>
            </div>
        }
    </div>

    @* Summary cards *@
    @{
        var grandPurchase = Model.TotalPurchase;
        var grandSales = Model.TotalSales;
        var net = grandSales - grandPurchase;
        var isProfit = net >= 0;
        var netAbs = Math.Abs(net);
    }

    <div class="mt-6 grid grid-cols-1 sm:grid-cols-3 gap-4 text-center">
        <div class="bg-gray-900 border border-gray-700 rounded-lg p-6 shadow">
            <div class="text-sm text-gray-400">Grand Total Purchase</div>
            <div class="text-3xl font-bold text-blue-400 mt-2">@grandPurchase.ToString("N2")</div>
        </div>

        <div class="bg-gray-900 border border-gray-700 rounded-lg p-6 shadow">
            <div class="text-sm text-gray-400">Grand Total Sales</div>
            <div class="text-3xl font-bold text-yellow-400 mt-2">@grandSales.ToString("N2")</div>
        </div>

        <div class="bg-gray-900 border border-gray-700 rounded-lg p-6 shadow">
            <div class="text-sm text-gray-400">@((isProfit) ? "Net Profit" : "Net Loss")</div>
            <div class="text-3xl font-bold @(isProfit ? "text-green-400" : "text-red-400") mt-2">@netAbs.ToString("N2")</div>
        </div>
    </div>

    <div class="page-break"></div>
</div>
