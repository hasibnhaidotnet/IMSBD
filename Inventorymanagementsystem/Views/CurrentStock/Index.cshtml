@model IEnumerable<Inventorymanagementsystem.ViewModel.ProductStockViewModel>

@{
    ViewData["Title"] = "Current Stock Report";
}

<div class="max-w-7xl mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">
    <div class="mb-6 flex justify-between items-center">
        <h2 class="text-3xl font-bold text-white">📊 Current Stock Report</h2>
    </div>

    <div class="overflow-x-auto bg-gray-900 rounded-xl shadow-inner">
        <table class="min-w-full divide-y divide-gray-700 text-gray-200 text-sm">
            <thead class="bg-gray-700 text-gray-300">
                <tr>
                    <th class="px-6 py-3 text-left font-medium">Product</th>
                    <th class="px-6 py-3 text-left font-medium">Unit</th>
                    <th class="px-6 py-3 text-left font-medium">Category</th>
                    <th class="px-6 py-3 text-left font-medium">SubCategory</th>
                    <th class="px-6 py-3 text-right font-medium">Purchased</th>
                    <th class="px-6 py-3 text-right font-medium">Purchase Return</th>
                    <th class="px-6 py-3 text-right font-medium">Sold</th>
                    <th class="px-6 py-3 text-right font-medium">Sales Return</th>
                    <th class="px-6 py-3 text-right font-medium">Damaged</th>
                    <th class="px-6 py-3 text-right font-bold">Current Stock</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                @foreach (var item in Model)
                {
                    var lowStockClass = item.CurrentStock <= 5 ? "bg-red-100 text-red-900 font-semibold" : "hover:bg-gray-700";
                    <tr class="@lowStockClass transition-colors duration-200">
                        <td class="px-6 py-4">@item.ProductName</td>
                        <td class="px-6 py-4">@item.UnitName</td>
                        <td class="px-6 py-4">@item.CategoryName</td>
                        <td class="px-6 py-4">@item.SubCategoryName</td>
                        <td class="px-6 py-4 text-right">@item.TotalPurchased.ToString("0.##")</td>
                        <td class="px-6 py-4 text-right">@item.TotalPurchaseReturn.ToString("0.##")</td>
                        <td class="px-6 py-4 text-right">@item.TotalSold.ToString("0.##")</td>
                        <td class="px-6 py-4 text-right">@item.TotalSalesReturn.ToString("0.##")</td>
                        <td class="px-6 py-4 text-right">@item.TotalDamaged.ToString("0.##")</td>
                        <td class="px-6 py-4 text-right font-bold">@item.CurrentStock.ToString("0.##")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
