@model Inventorymanagementsystem.ViewModels.UnitViewModel
@{
    ViewData["Title"] = "Delete Unit";
}

<h2 class="text-2xl font-semibold mb-4 text-red-600">Are you sure you want to delete this Unit?</h2>

<div class="space-y-2">
    <div>
        <strong>Unit Name:</strong> @Model.Name
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 shadow">Yes, Delete</button>
    <a asp-action="Index" class="ml-2 bg-gray-400 text-white px-4 py-2 rounded hover:bg-gray-500 shadow">Cancel</a>
</form>
