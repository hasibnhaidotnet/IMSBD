@model Inventorymanagementsystem.ViewModel.PurchaseReturnViewModel

<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-lg mt-8">
    <h2 class="text-2xl font-bold text-red-600 mb-6">🗑️ Confirm Delete Purchase Return</h2>

    <div class="grid grid-cols-1 gap-4 mb-6 text-gray-700">
        <div>
            <strong>Product:</strong>
            <p class="mt-1">@Model.ProductName</p>
        </div>
        <div>
            <strong>Supplier:</strong>
            <p class="mt-1">@Model.SupplierName</p>
        </div>
        <div>
            <strong>Quantity:</strong>
            <p class="mt-1">@Model.Quantity</p>
        </div>
        <div>
            <strong>Return Date:</strong>
            <p class="mt-1">@Model.ReturnDate.ToString("dd MMM yyyy")</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="flex justify-between">
            <a asp-action="Index" class="inline-block px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">Cancel</a>
            <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Delete</button>
        </div>
    </form>
</div>
