@model Inventorymanagementsystem.Models.Product
@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white rounded-2xl shadow-md p-8">
    <h2 class="text-3xl font-semibold text-center text-red-600 mb-6">Confirm Delete</h2>

    <div class="grid grid-cols-2 gap-4 text-sm text-gray-700 mb-6">
        <div>
            <span class="font-semibold">Product Name:</span><br />
            @Model.Name
        </div>
        <div>
            <span class="font-semibold">Category:</span><br />
            @Model.Category?.Name
        </div>
        <div>
            <span class="font-semibold">Subcategory:</span><br />
            @Model.SubCategory?.Name
        </div>
        <div>
            <span class="font-semibold">Unit:</span><br />
            @Model.Unit?.Name
        </div>
    </div>

    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-6">
        ⚠️ Are you sure you want to delete this product? This action cannot be undone.
    </div>

    <form asp-action="Delete" method="post" class="flex justify-end space-x-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-5 py-2 rounded-lg shadow">
            Cancel
        </a>

        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg shadow">
            Delete
        </button>
    </form>
</div>
