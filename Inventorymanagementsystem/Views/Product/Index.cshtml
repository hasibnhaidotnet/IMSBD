@model IEnumerable<Inventorymanagementsystem.Models.Product>
@{
    ViewData["Title"] = "Product List";
}

<div class="max-w-7xl mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-white">Product List</h2>
        <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded shadow">
            + Create New Product
        </a>
    </div>

    <div class="overflow-x-auto rounded bg-gray-900 shadow-inner">
        <table class="min-w-full divide-y divide-gray-700 text-gray-200">
            <thead class="bg-gray-700 text-left text-sm font-semibold">
                <tr>
                    <th class="px-4 py-3">Name</th>
                    <th class="px-4 py-3">Code</th>
                    <th class="px-4 py-3">Unit</th>
                    <th class="px-4 py-3">Category</th>
                    <th class="px-4 py-3">SubCategory</th>
                    <th class="px-4 py-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-700 transition">
                        <td class="px-4 py-2">@item.Name</td>
                        <td class="px-4 py-2">@item.ProductCode</td>
                        <td class="px-4 py-2">@item.Unit?.Name</td>
                        <td class="px-4 py-2">@item.Category?.Name</td>
                        <td class="px-4 py-2">@item.SubCategory?.Name</td>
                        <td class="px-4 py-2 text-center space-x-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-400 hover:text-blue-600 font-medium">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-green-400 hover:text-green-600 font-medium">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-400 hover:text-red-600 font-medium">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
