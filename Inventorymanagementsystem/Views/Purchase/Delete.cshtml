@model Inventorymanagementsystem.Models.Purchase
@{
    ViewData["Title"] = "Delete Purchase";
}

<h2>Are you sure you want to delete this Purchase?</h2>

<div>
    <strong>Memo No:</strong> @Model.MemoNo<br />
    <strong>Date:</strong> @Model.PurchaseDate.ToShortDateString()<br />
    <strong>Supplier:</strong> @Model.Client?.Name
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
