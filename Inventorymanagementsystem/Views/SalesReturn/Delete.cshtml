@model Inventorymanagementsystem.ViewModels.SalesReturnViewModel

@{
    ViewData["Title"] = "Delete Sales Return";
}

<h2 class="text-xl font-bold text-red-600 mb-4">Are you sure you want to delete this return?</h2>

<div class="space-y-2">
    <div><strong>Product:</strong> @Model.ProductName</div>
    <div><strong>Quantity:</strong> @Model.Quantity</div>
    <div><strong>Return Date:</strong> @Model.ReturnDate.ToString("yyyy-MM-dd")</div>
    <div><strong>Note:</strong> @Model.Note</div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded shadow">Delete</button>
    <a asp-action="Index" class="ml-2 text-gray-700 hover:underline">Cancel</a>
</form>
