@model Inventorymanagementsystem.Models.Sale
@{
    ViewData["Title"] = "Delete Sale";
}

<h2 class="text-2xl font-semibold mb-4">Confirm Delete</h2>

<p class="text-red-600">Are you sure you want to delete this sale?</p>

<div class="mb-4">
    <p><strong>Date:</strong> @Model.SaleDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Buyer:</strong> @Model.Client?.Name</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn bg-red-600 text-white">Delete</button>
    <a asp-action="Index" class="btn bg-gray-500 text-white ml-2">Cancel</a>
</form>
