@model InventorymanagementSystem.ViewModels.SaleItemViewModel

<tr class="sale-item-row">
    <td>
        <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products">
            <option value="">Select Product</option>
        </select>
    </td>
    <td>
        <input asp-for="Quantity" class="form-control quantity" />
    </td>
    <td>
        <input asp-for="SellingPrice" class="form-control selling-price" />
    </td>
    <td>
        <button type="button" class="btn btn-danger remove-row">Remove</button>
    </td>
</tr>
