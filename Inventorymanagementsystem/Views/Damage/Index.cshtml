@model IEnumerable<Inventorymanagementsystem.ViewModels.DamageViewModel>
@{
    ViewData["Title"] = "Damages";
}

<div class="max-w-6xl mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-semibold text-white">⚠️ All Damaged Products</h2>
        <a asp-action="Create"
           class="px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition duration-200">
            + Add New Damage
        </a>
    </div>

    <div class="overflow-x-auto rounded-lg shadow-inner bg-gray-900">
        <table class="min-w-full divide-y divide-gray-700 text-gray-200">
            <thead class="bg-gray-700">
                <tr>
                    <th class="py-3 px-4 text-left text-sm font-semibold">Product</th>
                    <th class="py-3 px-4 text-left text-sm font-semibold">Quantity</th>
                    <th class="py-3 px-4 text-left text-sm font-semibold">Damage Date</th>
                    <th class="py-3 px-4 text-left text-sm font-semibold">Note</th>
                    <th class="py-3 px-4 text-center text-sm font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-700 transition">
                        <td class="py-3 px-4">@item.ProductName</td>
                        <td class="py-3 px-4">@item.Quantity</td>
                        <td class="py-3 px-4">@item.DamageDate.ToShortDateString()</td>
                        <td class="py-3 px-4">@item.Note</td>
                        <td class="py-3 px-4 text-center space-x-2">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="inline-block px-3 py-1 bg-yellow-400 rounded hover:bg-yellow-500 text-xs text-gray-900">
                                Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="inline-block px-3 py-1 bg-indigo-600 rounded hover:bg-indigo-700 text-xs text-white">
                                Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="inline-block px-3 py-1 bg-red-600 rounded hover:bg-red-700 text-xs text-white">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
