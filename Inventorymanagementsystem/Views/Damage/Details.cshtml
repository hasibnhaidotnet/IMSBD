@model Inventorymanagementsystem.ViewModels.DamageViewModel
@{
    ViewData["Title"] = "Damage Details";
}

<h2 class="text-2xl font-semibold mb-4">Damage Details</h2>

<div class="border p-4 rounded shadow-sm bg-light">
    <dl class="row">
        <dt class="col-sm-3">Product</dt>
        <dd class="col-sm-9">@Model.ProductName</dd>

        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Damage Date</dt>
        <dd class="col-sm-9">@Model.DamageDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Note</dt>
        <dd class="col-sm-9">@Model.Note</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
