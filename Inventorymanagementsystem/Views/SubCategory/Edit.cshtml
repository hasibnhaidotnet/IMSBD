@model Inventorymanagementsystem.ViewModels.SubCategoryViewModel
@{
    ViewData["Title"] = "Edit SubCategory";
}

<div class="max-w-xl mx-auto p-6 bg-white shadow rounded-xl">
    <h2 class="text-xl font-semibold mb-4 text-gray-800">✏️ Edit SubCategory</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-3 text-sm"></div>

        <div class="mb-4">
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Name" class="w-full border border-gray-300 px-3 py-2 rounded-md shadow-sm" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <select asp-for="CategoryId" asp-items="Model.CategoryList" class="w-full border border-gray-300 px-3 py-2 rounded-md shadow-sm">
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-red-600 text-sm"></span>
        </div>

        <div class="flex gap-3">
            <button type="submit" class="bg-blue-600 text-white px-5 py-2 rounded-md hover:bg-blue-700 transition">🔄 Update</button>
            <a asp-action="Index" class="bg-gray-500 text-white px-5 py-2 rounded-md hover:bg-gray-600 transition">↩️ Back</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
