@model IEnumerable<Inventorymanagementsystem.Models.SubCategory>
@{
    ViewData["Title"] = "SubCategory List";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-gray-800 rounded-xl shadow-md p-6">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
            <h2 class="text-2xl font-bold text-white">🗂️ SubCategory List</h2>
            <a asp-action="Create"
               class="px-5 py-2.5 bg-blue-600 text-white text-sm font-semibold rounded-lg shadow hover:bg-blue-700 transition">
                + Add SubCategory
            </a>
        </div>

        <div class="overflow-auto rounded-lg bg-gray-900 shadow-inner">
            <table class="min-w-full divide-y divide-gray-700 text-gray-200">
                <thead class="bg-gray-700 sticky top-0 z-10">
                    <tr>
                        <th class="px-6 py-3 text-left text-sm font-semibold uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-sm font-semibold uppercase tracking-wider">Category</th>
                        <th class="px-6 py-3 text-right text-sm font-semibold uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-700 transition">
                            <td class="px-6 py-4 text-sm">@item.Name</td>
                            <td class="px-6 py-4 text-sm">@item.Category?.Name</td>
                            <td class="px-6 py-4 text-right space-x-2">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="inline-block px-4 py-1.5 bg-yellow-400 text-gray-900 text-xs font-medium rounded hover:bg-yellow-500 transition">
                                    ✏️ Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="inline-block px-4 py-1.5 bg-blue-500 text-white text-xs font-medium rounded hover:bg-blue-600 transition">
                                    📄 Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="inline-block px-4 py-1.5 bg-red-600 text-white text-xs font-medium rounded hover:bg-red-700 transition">
                                    🗑️ Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
